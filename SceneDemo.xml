<scene name="DemoScene" GUISystem="GUIDemo.xml">
    <physicsworld>
        <gravity>
            <x>0</x>
            <y>-2.0</y>
            <z>0</z>
        </gravity>
    </physicsworld>
    <objects>
        <object name="Cube0" model="Graphics/Sphere.dae" type="Physical" textured="true" animated="false">
            <position-x>0</position-x>
            <position-y>30</position-y>
            <position-z>0</position-z>
            
            <rotation-x>0</rotation-x>
            <rotation-y>0</rotation-y>
            <rotation-z>0</rotation-z>
            
            <scale-x>1</scale-x>
            <scale-y>1</scale-y>
            <scale-z>1</scale-z>
            
            <material-r>0</material-r>
            <material-g>.8</material-g>
            <material-b>.4</material-b>
            
            <material-shininess>4</material-shininess>
            
            <physicsenabled>true</physicsenabled>
            <mass>10000</mass>
            <collision type="Sphere">
                <position-x>0</position-x>
                <position-y>30</position-y>
                <position-z>0</position-z>
                
                <radius>1</radius>
            </collision>
            
            <objects>
                
            </objects>
            
            <sounds>
                <sound file="file1.wav" name="test" minimumDistance="3" attenuation="100"/>
            </sounds>
        </object>
        <object name="Mesh1" model="Graphics/CollisionMesh.dae" type="Physical" textured="true" animated="false">
            <position-x>0</position-x>
            <position-y>-5</position-y>
            <position-z>0</position-z>
            
            <rotation-x>0</rotation-x>
            <rotation-y>0</rotation-y>
            <rotation-z>0</rotation-z>
            
            <scale-x>1</scale-x>
            <scale-y>1</scale-y>
            <scale-z>1</scale-z>
            
            <material-r>0</material-r>
            <material-g>.8</material-g>
            <material-b>.4</material-b>
            
            <material-shininess>4</material-shininess>
            
            <physicsenabled>true</physicsenabled>
            <mass>0</mass>
            <collision type="Mesh">
                <file>Graphics/CollisionMesh.dae</file>
                
                <position-x>0</position-x>
                <position-y>-5</position-y>
                <position-z>0</position-z>
            </collision>
            
            <objects>
                
            </objects>
            
            <sounds>
                <sound file="file1.wav" name="test" minimumDistance="3" attenuation="100"/>
            </sounds>
        </object>
        <object name="Light0" type="PointLight">
            <position-x>-1</position-x>
            <position-y>1</position-y>
            <position-z>-1</position-z>
                    
            <color-r>1</color-r>
            <color-g>1</color-g>
            <color-b>1</color-b>
                    
            <attenuate>true</attenuate>
        </object>
    </objects>
    <camera projection="perspective" FOV="45" width="10" height="10" yaw="0" pitch="0">
        <position-x>0</position-x>
        <position-y>0</position-y>
        <position-z>0</position-z>
    </camera>
    <listener>
        <music file="Test Song.wav" name="Test Music" loops="false" autoplay="false" />
    </listener>
    <renderer>
        <pipeline>
            <rendernode name="gbuffer" type="root">
                <inputs>
                </inputs>
                <outputs>
                    <output data="position" format="RGBA16F" slot="0" />
                    <output data="normal" format="RGB16F" slot="1" />
                    <output date="color" format="RGBA16F" slot="2" />
                </outputs>
                <shaders>
                    <shader type="scene_textured" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="./TexturedScene.pre" />
                    <shader type="scene_solid" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="./SolidScene.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
            <rendernode name="SSAO" type="intermediate">
                <inputs>
                    <input node="gbuffer" data="position" format="RGBA16F" slot="0" />
                    <input node="gbuffer" data="normal" format="RGB16F" slot="1" />
                </inputs>
                <outputs>
                    <output data="occlusion" format="16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./SSAOQuad.pre" />
                </shaders>
                <textures>
                    <texture name="noise" type="noise_hemisphere" width="4" height="4" />
                </textures>
                <uniforms>
                    <hemispheresamplekernel name="samples" samplecount="8" />
                </uniforms>
            </rendernode>
            <rendernode name="SSAOBlur" type="intermediate">
                <inputs>
                    <input node="SSAO" data="occlusion" format="16F" slot="0" />
                </inputs>
                <outputs>
                    <output data="occlusion" format="16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./SSAOBlurQuad.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
            <rendernode name="final" type="end">
                <inputs>
                    <input node="gbuffer" data="position" format="RGB16F" slot="0" />
                    <input node="gbuffer" data="normal" format="RGB16F" slot="1" />
                    <input node="gbuffer" data="color" format="RGBA16F" slot="2" />
                    <input node="SSAOBlur" data="occlusion" format="16F" slot="0" />
                </inputs>
                <outputs>
                    <output data="color" format="RGBA16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./DeferredQuad.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
        </pipeline>
    </renderer>
</scene>