    <renderer>
        <pipeline>
            <rendernode name="gbuffer" type="root">
                <inputs>
                </inputs>
                <outputs>
                    <output data="position" format="RGBA16F" slot="0" />
                    <output data="normal" format="RGB16F" slot="1" />
                    <output date="color" format="RGBA16F" slot="2" />
                </outputs>
                <shaders>
                    <shader type="scene_textured" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="./TexturedScene.pre" />
                    <shader type="scene_solid" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="./SolidScene.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
            <rendernode name="SSAO" type="intermediate">
                <inputs>
                    <input node="gbuffer" data="position" format="RGBA16F" slot="0" />
                    <input node="gbuffer" data="normal" format="RGB16F" slot="1" />
                </inputs>
                <outputs>
                    <output data="occlusion" format="16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./SSAOQuad.pre" />
                </shaders>
                <textures>
                    <texture name="noise" type="noise_hemisphere" width="4" height="4" />
                </textures>
                <uniforms>
                    <hemispheresamplekernel name="samples" samplecount="8" />
                </uniforms>
            </rendernode>
            <rendernode name="SSAOBlur" type="intermediate">
                <inputs>
                    <input node="SSAO" data="occlusion" format="16F" slot="0" />
                </inputs>
                <outputs>
                    <output data="occlusion" format="16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./SSAOBlurQuad.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
            <rendernode name="final" type="end">
                <inputs>
                    <input node="gbuffer" data="position" format="RGB16F" slot="0" />
                    <input node="gbuffer" data="normal" format="RGB16F" slot="1" />
                    <input node="gbuffer" data="color" format="RGBA16F" slot="2" />
                    <input node="SSAOBlur" data="occlusion" format="16F" slot="0" />
                </inputs>
                <outputs>
                    <output data="color" format="RGBA16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="./DeferredQuad.pre" />
                </shaders>
                <textures>
                    
                </textures>
                <uniforms>
                    
                </uniforms>
            </rendernode>
        </pipeline>
    </renderer>
