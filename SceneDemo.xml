<scene name="DemoScene" GUISystem="GUIDemo.xml">
    <objects>
        <object name="Cube" model="Graphics/Cube.dae" type="Physical" textured="true" animated="false">
            <position-x>0</position-x>
            <position-y>0</position-y>
            <position-z>0</position-z>
            
            <rotation-x>0</rotation-x>
            <rotation-y>0</rotation-y>
            <rotation-z>0</rotation-z>
            
            <scale-x>1</scale-x>
            <scale-y>1</scale-y>
            <scale-z>1</scale-z>
            
            <material-r>1</material-r>
            <material-g>0</material-g>
            <material-b>1</material-b>
            
            <material-shininess>8192</material-shininess>
            
            <objects>
                <object name="Light" type="PointLight">
                    <position-x>-3</position-x>
                    <position-y>4</position-y>
                    <position-z>0</position-z>
                    
                    <color-r>5</color-r>
                    <color-g>5</color-g>
                    <color-b>5</color-b>
                </object>
            </objects>
        </object>
    </objects>
    <camera projection="perspective" FOV="45" width="10" height="10" yaw="0" pitch="0">
        <position-x>-2</position-x>
        <position-y>1</position-y>
        <position-z>0</position-z>
    </camera>
    <renderer>
        <pipeline>
            <rendernode name="gbuffer" type="root">
                <inputs>
                </inputs>
                <outputs>
                    <output data="position" format="RGB16F" slot="0" />
                    <output data="normal" format="RGB16F" slot="1" />
                    <output date="color" format="RGBA16F" slot="2" />
                </outputs>
                <shaders>
                    <shader type="scene_textured" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="#define RENDER_TEXTURED\n#define OUTPUT_POSITION_0\n#define OUTPUT_NORMAL_1\n#define OUTPUT_COLOR_2\n" />
                    <shader type="scene_solid" vertex="./Graphics/Shaders/Variable Pipeline/Scene.vert" fragment="./Graphics/Shaders/Variable Pipeline/Scene.frag" preprocessor="#define RENDER_SOLID\n#define OUTPUT_POSITION_0\n#define OUTPUT_NORMAL_1\n#define OUTPUT_COLOR_2\n" />
                </shaders>
            </rendernode>
            <rendernode name="final" type="end">
                <inputs>
                    <input node="gbuffer" data="position" format="RGB16F" slot="0" />
                    <input node="gbuffer" data="normal" format="RGB16F" slot="1" />
                    <input node="gbuffer" data="color" format="RGBA16F" slot="2" />
                </inputs>
                <outputs>
                    <output data="color" format="RGBA16F" slot="0" />
                </outputs>
                <shaders>
                    <shader type="quad" vertex="./Graphics/Shaders/Variable Pipeline/Quad.vert" fragment="./Graphics/Shaders/Variable Pipeline/Quad.frag" preprocessor="#define LIGHTING\n#define LIGHTING_DEFERRED\n#define INPUT_POSITION\n#define INPUT_NORMAL\n#define INPUT_COLOR\n#define OUTPUT_COLOR_0\n" />
                </shaders>
            </rendernode>
        </pipeline>
    </renderer>
</scene>