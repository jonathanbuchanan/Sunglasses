<GUISystem name="GUIDemoSystem">
    <fonts>
        <font file="arial.ttf" name="Arial" />
    </fonts>
    <menus>
        <menu name="ESCMenu" visible="false">
            <actions>
                <action trigger="escape" target-type="menu" target-path="@self" action="toggleBool" targetProperty="visible" valueType="" value="" />
                <action trigger="escape" target-type="menu" target-path="@self" action="toggleMouse" targetProperty="" valueType="" value="" />
            </actions>
            
            <items>
                <item name="Exit">
                    <text>Exit the Program</text>
                    <font>Arial</font>
                    
                    <width>1</width>
                    <height>.2</height>
                    
                    <x>-.5</x>
                    <y>-.7</y>
                    
                    <r>.576</r>
                    <g>.204</g>
                    <b>.416</b>
                    
                    <textured>false</textured>
                    <texturepath></texturepath>
                    
                    <r-highlighted>.757</r-highlighted>
                    <g-highlighted>.024</g-highlighted>
                    <b-highlighted>.439</b-highlighted>
                    
                    <textured-highlighted>false</textured-highlighted>
                    <texturepath-highlighted></texturepath-highlighted>
                    
                    <actions>
                        <action trigger="click" target-type="item" target-path="@self" action="closeWindow" targetProperty="" valueType="" value="" />
                    </actions>
                </item>
            </items>
        </menu>
